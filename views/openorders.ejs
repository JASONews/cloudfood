        var socket = io();
        socket.on('order', function (order) {
            var tableString = '<tr><td>' + order.name + '</td><td>' + order.address + '</td><td>' + order.restaurant + '</td><td>' + order.order + '</td></tr>';
            $('#ordersTable').append(tableString);
            console.log("ORDER RECEIVED");
        });
    </script>

